---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/home/Hero.astro";
import Section from "../components/common/Section.astro";
import ChatInterface from "../components/home/ChatInterface.astro";
import GameOfLife from "../components/home/GameOfLife.astro";
import Anchor from "../components/common/Anchor.astro";
import { getConfigurationCollection } from "../lib/utils";

const { data: config } = await getConfigurationCollection();
---

<Layout>
  <!-- Conway's Game of Life on margins (large screens only) -->
  <GameOfLife />
  <Fragment slot="head">
    <title>{config.globalMeta.title}</title>
    <meta
      name="description"
      content={config.globalMeta.longDescription ?? config.globalMeta.description}
    />
    <meta property="og:title" content={config.globalMeta.title} />
    <meta
      property="og:description"
      content={config.globalMeta.description}
    />
    {config.globalMeta.keywords && (
      <meta name="keywords" content={config.globalMeta.keywords.join(", ")} />
    )}
    {config.globalMeta.cardImage && (
      <meta property="og:image" content={config.globalMeta.cardImage} />
    )}
    <meta property="og:url" content={config.site.baseUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={config.globalMeta.title} />
    <meta
      name="twitter:description"
      content={config.globalMeta.description}
    />
    {config.globalMeta.cardImage && (
      <meta name="twitter:image" content={config.globalMeta.cardImage} />
    )}
    <meta http-equiv="content-language" content="en" />
    <meta name="language" content="English" />
    <link rel="canonical" href={config.site.baseUrl} />
  </Fragment>
  <Section class="my-16">
    <Hero />
  </Section>
  <Section>
    <div class="mb-8">
      <p class="zag-text zag-transition text-base leading-relaxed mb-6">
        I am a software engineer living in San Francisco, CA. Currently, I am the founder and CTO of <a href="https://www.useplaygent.com" target="_blank" rel="noopener noreferrer" class="underline hover:no-underline">Playgent (YC S25)</a>, a testing sandbox for conversational AI agents. I previously was an <a href="/research" class="underline hover:no-underline">NLP researcher</a>, where I worked on making language models reliable and factual.
      </p>
      <div class="flex gap-5 items-center">
        <!-- Twitter/X -->
        <Anchor url="https://x.com/aniruddhsr24" aria-label="Twitter">
          <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" class="zag-fill zag-transition hover:opacity-70">
