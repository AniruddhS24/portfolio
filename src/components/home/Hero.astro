---
import { getConfigurationCollection } from "../../lib/utils";

const { data: config } = await getConfigurationCollection();
---

<div class="flex flex-col sm:flex-row items-center gap-8 sm:gap-14">
  <img 
    src="/profile.svg" 
    alt="Profile sketch"
    class="profile-sketch shrink-0 rounded-b-4xl"
  />
  <div class="flex flex-col items-center sm:items-start gap-6">
    <h1
      class="text-3xl sm:text-4xl font-display font-semibold opsz text-center sm:text-left"
    >
      {config.hero.title}
    </h1>
    <h2
      class="text-center text-xl sm:text-2xl font-mono font-medium sm:text-left"
    >
      <p set:html={config.hero.subtitle}/>
    </h2>
  </div>
</div>

<style>
  .profile-sketch {
    display: block;
    width: 9rem;
    height: auto;
    object-fit: contain;
    transition: filter 0.15s ease-in-out;
  }
  
  @media (min-width: 640px) {
    .profile-sketch {
      width: 11.5rem;
    }
  }
  
  /* Light mode: keep black */
  .profile-sketch {
    filter: brightness(0);
  }
  
  /* Dark mode: invert to white */
  :global(.dark) .profile-sketch {
    filter: brightness(0) invert(1);
  }
</style>
